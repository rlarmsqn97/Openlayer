<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.openlayer.dao.CoordinateDAO">
    <insert id="coordinateInsert" parameterType="com.example.openlayer.vo.CoordinateVO">
        insert into coordinate (geom) values (st_geomfromtext('POINT('|| #{lon} ||' '|| #{lat} ||')', 3857))
    </insert>
    <select id="getCoordinate" resultType="com.example.openlayer.vo.CoordinateVO">
        select replace(st_astext(geom), 'POINT(', '') as geom from coordinate
    </select>
</mapper>
